package com.vti.frontend;

import java.util.List;

import com.vti.entity.Group;
import com.vti.reponsitory.DepartmentRepository;

public class Program {
	
	public static void main(String[] args) {
		DepartmentRepository repository = new DepartmentRepository();
		System.out.println("***********GET ALL GROUPS***********");

		List<Group> departments = repository.getAllDepartments();

		for (Group department : departments) {
			System.out.println(department);
		}
		System.out.println("\n\n***********GET GROUPS BY ID***********");

		Group departmentById = repository.getDepartmentByID((short) 2);
		System.out.println(departmentById);

		System.out.println("\n\n***********GET GROUPS BY NAME***********");

		Group departmentByName = repository.getDepartmentByName("Marketting");
		System.out.println(departmentByName);
		System.out.println("\n\n***********CREATE GROUPS***********");

		Group departmentCreate = new Group();
		departmentCreate.setName("waiting");
		repository.createDepartment(departmentCreate);

		System.out.println("\n\n***********UPDATE GROUPS 1***********");

		repository.updateDepartment((short) 3, "Security");

		System.out.println("\n\n***********UPDATE GROUPS 2***********");

		Group departmentUpdate = new Group();
		departmentUpdate.setId((short) 2);
		departmentUpdate.setName("Security2");
		repository.updateDepartment(departmentUpdate);

		System.out.println("\n\n***********DELETE GROUPS***********");
		repository.deleteDepartment((short) 2);

		System.out.println("***********CHECK GROUPS EXISTS BY ID***********");
		System.out.println(repository.isDepartmentExistsByID((short) 1));

		System.out.println("***********CHECK GROUPS EXISTS BY NAME***********");
		System.out.println(repository.isDepartmentExistsByName("Security"));
	}
}
