package com.vti.entity.Polymorphism.Question3;

import java.util.Scanner;

public class HinhVuong extends HinhChuNhat {
	private Scanner scanner = new Scanner(System.in);
	public HinhVuong(Float canha) {
		super(canha, canha);
		// TODO Auto-generated constructor stub
	}

	public HinhVuong() {
		// TODO Auto-generated constructor stub
	}

	public Float tinhChuViHV() {
		return getCanha() * getCanha() * getCanha() * getCanha();
	}
	public Float tinhDienTichHV() {
		return getCanha()* getCanha();
	}
	public void input() {
		 System.out.println("Cạnh a : "+getCanha());
	}
	public void output() {
		System.out.println("Chu vi Hình Vuông = "+tinhChuViHV());
		System.out.println("Diện tích Hình Vuông  = "+tinhDienTichHV());
	}
}
