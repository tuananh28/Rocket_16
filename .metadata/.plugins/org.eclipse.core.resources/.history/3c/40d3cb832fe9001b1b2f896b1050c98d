package com.vti.entity.Static;

import com.vti.ultis.ScannerUltis;

public class Student {
	private int ID;
	private String Name;
	public static String college = "Đại học Bách Khoa";
	public static int dem = 0;
	public static float moneyGroup; // Question2

	public Student() {
		super();
		if (dem > 7) {
			System.err.println("Số lượng sinh viên đã vượt quá 7, không thể tạo thêm sinh viên");
		} else {
			this.ID = dem;
			System.out.println("Nhập vào tên sinh viên: ");
			this.Name = ScannerUltis.inputString();
		}
	}

	@Override
	public String toString() {
		return "\nID : " + ID + "\nName : " + Name + "\nCollect : " + college + "";
	}

	// Question 3
	public static String getCollege() {
		return college;
	}

	public static void setCollege(String college) {
		Student.college = college;
	}

	public String getName() {
		return Name;
	}

	public void setName(String name) {
		Name = name;
	}

}
