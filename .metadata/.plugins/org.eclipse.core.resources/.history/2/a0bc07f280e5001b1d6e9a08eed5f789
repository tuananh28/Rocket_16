package com.vti.backend;

import java.io.PrintStream;

import com.vti.entity.Department;

public class Ex5_Object_Method {

	public static void main(String[] args) {

		Department[] departments = new Department[5];
		// department1
		Department department1 = new Department();
		extracted(department1).DepartmentID = 1;
		extracted(department1).DepartmentName = "Sale";
		// department2
		Department department2 = new Department();
		extracted(department2).DepartmentID = 2;
		extracted(department2).DepartmentName = "Marketing";
		// department3
		Department department3 = new Department();
		extracted(department3).DepartmentID = 3;
		extracted(department3).DepartmentName = "Boss of director";
		// department4
		Department department4 = new Department();
		extracted(department4).DepartmentID = 4;
		extracted(department4).DepartmentName = "Waiting room";
		// department5
		Department department5 = new Department();
		extracted(department5).DepartmentID = 5;
		extracted(department5).DepartmentName = "Accounting";

		departments[0] = extracted(department1);
		departments[1] = extracted(department2);
		departments[2] = extracted(department3);
		departments[3] = extracted(department4);
		departments[4] = extracted(department5);

		Question1(extracted(department1));
		Question2(departments);
		Question3(extracted(department1));
		Question4(extracted(department1));
		Question5();
		Question6();
		Question7();
	}

	private static void Question1(Department department) {
		// In ra thông tin củaphòng ban thứ 1 (sử dụng toString())
		System.out.println("DepartmentID : " + extracted(department).DepartmentID);
		System.out.println("DepartmentName : " + extracted(department).DepartmentName);
	}

	private static void Question2(Department[] departments) {
		// In ra thông tin của tất cả phòng ban (sử dụng toString())
		for (Department department : departments) {
			System.out.println(extracted(department));
		}
	}

	private static void Question3(Department department) {
		// In ra địa chỉ của phòng ban thứ 1
		System.out.println(extracted(department).hashCode());
	}

	private static void Question4(Department department) {
		// Kiểm tra xem phòng ban thứ 1 có tên là "Phòng A" không?
		if (extracted(department).DepartmentName.equals("Phòng A")) {
			System.out.println("Phòng ban 1 có Phòng A");
		} else {
			System.out.println("Không có");
		}
	}

	private static void Question5(Department department1, Department department2) {
		/*
		 * So sánh 2 phòng ban thứ 1 và phòng ban thứ 2 xem có bằng nhau không (bằng
		 * nhau khi tên của 2 phòng ban đó bằng nhau)
		 */
		if (extracted(department1).DepartmentName.equals(extracted(department2))) {
			System.out.println("Bằng nhau");
		}else {
			System.out.println("Không bằng nhau");
		}

	}

	private static Department extracted(Department department2) {
		return department2;
	}

	private static void Question6() {
		/*
		 * Khởi tạo 1 array phòng ban gồm 5 phòng ban, sau đó in ra danh sách phòng ban
		 * theo thứ tự tăng dần theo tên (sắp xếp theo vần ABCD) VD: Accounting Boss of
		 * director Marketing Sale Waiting room
		 */

	}

	private static void Question7() {
		/*
		 * Khởi tạo 1 array học sinh gồm 5 Phòng ban, sau đó in ra danh sách phòng ban
		 * được sắp xếp theo tên VD: Accounting Boss of director Marketing waiting room
		 * Sale
		 */

	}

}
