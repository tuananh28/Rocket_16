package com.vti.entity.Abstraction.Question2;

import java.util.Scanner;

public class Khoi extends ThiSinh{
	private String Khoithi;
	private String Monthi;
	private Scanner scanner;
	
	public String getMonthi() {
		if (Khoithi.equals("A")) {
			Monthi = "Toán, Lý, Hóa";
		}else if (Khoithi.equals("B")) {
			Monthi = "Toán, Hóa, Sinh";
		}else if (Khoithi.equals("C")) {
			Monthi = "Văn, Sử, Địa";
		}else {
			System.out.println("Không có khối thi này !");
		}
		return Monthi;
	}

	public String getKhoithi() {
		return Khoithi;
	}

	public void setKhoithi(String khoithi) {
		Khoithi = khoithi;
	}

	public void setMonthi(String monthi) {
		Monthi = monthi;
	}
	public void Input() {
		super.Input();
		System.out.print("Khối thi : ");
		Khoithi = scanner.nextLine();		
	}
	
	public void Output() {
		super.Output();
		System.out.println("Khối thi : "+Khoithi);
		System.out.println("Môn thi : "+getMonthi());
	}
	
}
