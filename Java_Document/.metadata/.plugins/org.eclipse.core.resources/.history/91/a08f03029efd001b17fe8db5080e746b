package com.vti.backend.businesslayer;

import java.io.FileNotFoundException;
import java.io.IOException;
import java.sql.SQLException;
import java.util.List;

import com.vti.backend.datalayer.Reponsitory;
import com.vti.entity.User;

public class Service implements IService {
	Reponsitory reponsitory;

	public Service() throws FileNotFoundException, IOException {
		// TODO Auto-generated constructor stub
		reponsitory = new Reponsitory();
	}

	public int getAccountMode() {
		// TODO Auto-generated method stub
		return Reponsitory.accountMode;
	}

	public boolean isLogin(String email, String password) throws ClassNotFoundException, SQLException {
		// TODO Auto-generated method stub
		return reponsitory.isLogin(email, password);
	}

	public boolean isEmailIfExists(String email) throws ClassNotFoundException, SQLException {
		// TODO Auto-generated method stub
		return reponsitory.isEmailIfExists(email);
	}

	public List<User> getListMemberByProjectID(int projectID) throws ClassNotFoundException, SQLException {
		// TODO Auto-generated method stub
		return reponsitory.getListEmployeeInProject(projectID);
	}

	public List<User> getListManager() throws ClassNotFoundException, SQLException {
		// TODO Auto-generated method stub
		return reponsitory.getListManagersInProject();
	}
}
